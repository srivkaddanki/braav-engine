import os
import time
import ollama
from watchdog.observers import Observer
from watchdog.events import FileSystemEventHandler
from supabase import create_client

# --- CONFIGURATION ---
URL = "your_supabase_url"
KEY = "your_supabase_anon_key"
supabase = create_client(URL, KEY)
WATCH_FOLDER = "./dairy"

class DiaryHandler(FileSystemEventHandler):
    def on_created(self, event):
        if not event.is_directory and event.src_path.lower().endswith(('.png', '.jpg', '.jpeg')):
            print(f"üëÅÔ∏è ORB perceived new entry: {event.src_path}")
            self.process_image(event.src_path)

    def process_image(self, file_path):
        try:
            # 1. Vision Analysis (Local Llama 3.2 Vision)
            with open(file_path, 'rb') as img:
                response = ollama.chat(
                    model='llama3.2-vision',
                    messages=[{
                        'role': 'user',
                        'content': 'Analyze this for my personal diary. What is happening? Summarize the mood and the activity in one punchy sentence for Macha.',
                        'images': [img.read()]
                    }]
                )
            
            description = response['message']['content']
            filename = os.path.basename(file_path)

            # 2. Sync to Supabase
            data = {
                "image_filename": filename,
                "visual_extraction": description,
                "macha_context": "Auto-ingested via Perception Kernel.",
            }
            
            result = supabase.table("diary_logs").insert(data).execute()
            print(f"‚úÖ Memory consolidated: {filename}")
            
        except Exception as e:
            print(f"‚ùå Perception Error: {e}")

if __name__ == "__main__":
    if not os.path.exists(WATCH_FOLDER):
        os.makedirs(WATCH_FOLDER)
        
    event_handler = DiaryHandler()
    observer = Observer()
    observer.schedule(event_handler, WATCH_FOLDER, recursive=False)
    
    print(f"üöÄ Perception Kernel active. Watching {WATCH_FOLDER}...")
    observer.start()
    try:
        while True:
            time.sleep(1)
    except KeyboardInterrupt:
        observer.stop()
    observer.join()